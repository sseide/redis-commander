<div id="itemActionsBar">
  <button class="btn btn-danger" onclick="deleteKey('<%= connectionId %>','<%= key %>')">Delete Key</button>
  <button id="base64Button" class="btn btn-primary" onclick="decodeKey('<%= connectionId %>','<%= key %>')">Decode <small>base64</small></button>
  <button id="vieModeEditButton" class="btn btn-default" style="display: none;" onclick="$('#stringValue').css('display','inline');$('#jqtree_string_div').css('display','none');$('#vieModeEditButton').css('display','none');$('#vieModeTreeButton').css('display','inline')">view mode edit</button>
  <button id="vieModeTreeButton" class="btn btn-default" onclick="$('#stringValue').css('display','none');$('#jqtree_string_div').css('display','inline-block');$('#vieModeEditButton').css('display','inline');$('#vieModeTreeButton').css('display','none')">view mode tree</button>
</div>
<div id="itemData">
  <form id="editStringForm" action="apiv1/key/<%= connectionId %>/<%= key %>" method="POST" class="form-vertical">
    <label>Key: <b><%= key %></b></label><br>
    <label>TTL: <b><%= ttl %></b></label><br>
    <label>Value:</label><br>
    <input type="hidden" id="isJson" name="isJson" class="form-control"/>
    <textarea id="stringValue" name="stringValue" style="width: 600px; height: 450px;"></textarea>
    <div id="jqtree_string_div" style="display: none;">loading ...</div>
    <span class="clippyWrapper" title="copy to clipboard">
      <span id="stringValueClippy"></span>
    </span>
    <br>
    <button id="saveKeyButton" type="button" class="btn btn-default" onclick="$('#editStringForm').submit()">Save</button>
  </form>
</div>
