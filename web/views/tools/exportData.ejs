<h2>Export</h2>

<form class="form-horizontal" id="redisExportForm">
  <div class="form-group">
    <label class="control-label" for="connectionExportField">Connection</label>
    <div class="controls">
      <select name="connection">
        <% connections.forEach(function(connection, index) {%>
        <% if (index == 0) { %>
        <option value="<%=connection.options.host%>:<%=connection.options.port%>:<%=connection.options.db %>"><%=connection.options.host%>:<%=connection.options.port%>:<%=connection.options.db %></option>
        <% } else { %>
        <option value="<%=connection.options.host%>:<%=connection.options.port%>:<%=connection.options.db %>"><%=connection.options.host%>:<%=connection.options.port%>:<%=connection.options.db %></option>
        <% }}); %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label">Data type</label>
    <div class="controls">
      <div class="checkbox"><label class="">
        <input type="radio" name="type" value="redis" checked />
        Redis
      </label></div>
      <div class="checkbox"><label class="">
        <input type="radio" name="type" value="json" />
        JSON
      </label></div>
    </div>
  </div>
  <div class="form-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary" value="Export" />
    </div>
  </div>
</form>

