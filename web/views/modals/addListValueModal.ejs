<div id="addListValueModal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Add Value</h3>
  </div>
  <div class="modal-body">
    <form id="addListValueForm" action="apiv1/listvalue/" method="POST" class="form-vertical label-big">
      <input id="key" name="key" type="hidden" class="form-control" />
      <label class="radio-inline">
        <input id="typeLpush" type="radio" name="type" value="lpush" checked />
        LPUSH
      </label>
      <label class="radio-inline">
        <input id="typeRpush" type="radio" name="type" value="rpush" />
        RPUSH
      </label>
      <br>
      <label class="control-label lead" for="addStringValue">Value</label>
      <textarea id="addStringValue" name="stringValue" style="width: 500px; height: 250px;"></textarea>
      <input id="addListConnectionId" name="listConnectionId" hidden class="form-control" />
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal">Close</button>
    <button id="saveValueButton" class="btn btn-primary" data-loading-text="<i class='icon-refresh'></i> Saving..." onclick="$('#addListValueForm').submit()">Save</button>
  </div>
</div>
