<div id="editListRowModal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Edit Row</h3>
  </div>
  <div class="modal-body">
    <form id="editListRowForm" action="apiv1/editListRow/" method="POST" class="form-vertical label-big">
      <label class="control-label lead" for="listKey">Key</label>
      <input id="listKey" name="listKey" type="text" readonly class="form-control" />
      <label class="control-label lead" for="listIndex">Index</label>
      <input id="listIndex" name="listIndex" type="text" readonly class="form-control" />
      <label class="control-label lead" for="listValue">Value</label>
      <textarea id="listValue" name="listValue" style="width: 500px; height: 250px;"></textarea>
      <input id="editListConnectionId" name="listConnectionId" hidden class="form-control" />
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal">Close</button>
    <button id="removeListValueButton" class="btn btn-danger" data-loading-text="<i class='icon-refresh'></i> Removing..." onclick="removeListElement()">Remove Element</button>
    <button id="editListValueButton" class="btn btn-primary" data-loading-text="<i class='icon-refresh'></i> Saving..." onclick="$('#editListRowForm').submit()">Save</button>
  </div>
</div>
