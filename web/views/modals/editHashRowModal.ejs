<div id="editHashRowModal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Edit Hash Field</h3>
  </div>
  <div class="modal-body">
    <form id="editHashFieldForm" action="apiv1/editHashRow/" method="POST" class="form-vertical label-big">
      <label class="control-label lead" for="hashKey">Key</label>
      <input id="hashKey" name="hashKey" type="text" readonly class="form-control" />
      <label class="control-label lead" for="hashField">Field</label>
      <input id="hashField" name="hashField" type="text" readonly class="form-control" />
      <label class="control-label lead" for="hashFieldValue">Value</label>
      <textarea id="hashFieldValue" name="hashFieldValue" style="width: 500px; height: 250px;"></textarea>
      <input id="hashConnectionId" name="hashConnectionId" hidden class="form-control" />
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal">Close</button>
    <button id="removeHashFieldButton" class="btn btn-danger" data-loading-text="<i class='icon-refresh'></i> Removing..." onclick="removeHashField()">Remove Field</button>
    <button id="editHashFieldButton" class="btn btn-primary" data-loading-text="<i class='icon-refresh'></i> Saving..." onclick="$('#editHashFieldForm').submit()">Save</button>
  </div>
</div>
